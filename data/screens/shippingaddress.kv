#:kivy 1.0

AACCaptureScreen:
    name: 'ShippingAddress'

    BoxLayout:
        orientation: 'vertical'
        padding: '60dp'
        top_padding: '10dp'
        pos_hint: {'y': .1}

        Button:
            size_hint_y: None
            height: '40dp'
            text: 'Click here to use Clinic Address'
            font_size: 25
            #top_padding: 40
            on_release: app.fill_address() 
        
        Label:
            text: ''
            height: '8dp'

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'Street 1'
            font_size: 25

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'Street 2'
            font_size: 25

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'City' 
            font_size: 25

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'State'  
            font_size: 25

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'Country' 
            font_size: 25

        TextInput:
            size_hint_y: None
            height: '40dp'
            multiline: False
            hint_text: 'Zip Code'     
            font_size: 25

    Button:
        size_hint_y: None
        height: '100dp'
        text: 'Next'
        font_size: 40
        on_release: app.go_next_screen()  