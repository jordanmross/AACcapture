#:kivy 1.0

ParentNameScreen:
    name: 'ParentName'

    BoxLayout:
        orientation: 'vertical'
        padding: '100dp'
        pos_hint: {'y': .3}

        TextInput:
            id: text_parentname
            size_hint_y: None
            height: '50dp'
            multiline: False
            hint_text: 'Parent Name'
            font_size: 32
            
    Button:
        size_hint_y: None
        height: '100dp'
        text: 'Next'
        font_size: 40
        on_release: root.go_next_screen()
