#:kivy 1.0

ConfirmationScreen:
    name: 'Confirmation'

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'y': .3}
        
        Label:
            id: label_parentname
            text: 'Parent Name:'
            size_hint_y: None
            height: '48dp'

        Label:
            id: label_parentemail
            text: 'Parent Email:'
            size_hint_y: None
            height: '48dp'

        Label:
            id: label_shippingaddr
            text: 'Shipping Address:'
            size_hint_y: None
            height: '48dp'
            
        Label:
            id: label_gridsize
            text: 'Grid Size:'
            size_hint_y: None
            height: '48dp'

    Button:
        size_hint_y: None
        height: '48dp'
        text: 'Finish'
        on_release: app.go_next_screen() 